<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_delivery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.beogotechnologies.deliverymanager_mobileapp.activities.admin.NewDeliveryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none">

        <!-- Date and hour -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/lblSendDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:id="@+id/lblSendDate"
                android:fontFamily="sans-serif-smallcaps"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtSendDate"
                android:inputType="date"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>


            <TextView
                android:text="@string/lblSenderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblSenderName"
                android:fontFamily="sans-serif-smallcaps"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtSenderName"
                android:inputType="text"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:text="@string/lblSenderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblSenderNumber"
                android:fontFamily="sans-serif-smallcaps"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtSenderNumber"
                android:inputType="number"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:text="@string/lblSenderAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblSender"
                android:fontFamily="sans-serif-smallcaps"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtSenderAddress"
                android:inputType="text"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:text="@string/lblReceiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblReceiver"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-smallcaps"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/txtReceiver"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:text="@string/lblReceiverAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblReceiverAddress"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/txtReceiverAddress"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:text="@string/lblDeliverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblDeliverName"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/txtDeliverName"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp">


                <Button
                    android:text="@string/lblBack"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/btnCancel"
                    android:layout_weight="0.87"
                    android:layout_marginTop="0dp"
                    android:theme="@style/CancelButton"
                    android:textColor="@color/colorWhite"
                    android:onClick="cancel"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
